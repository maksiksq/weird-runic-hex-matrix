{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "runic-matrix",
  "version": "0.1.2",
  "identifier": "com.runic-matrix.app",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "runic-matrix",
        "width": 1200,
        "height": 700,
        "fullscreen": false,
        "maximized": true
      }
    ],
    "security": {
      "csp": ""
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {}
}
